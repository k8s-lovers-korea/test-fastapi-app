# FastAPI Test Application Environment Variables
# Copy this file to .env and configure as needed

# External Service - Spring Boot API
SPRING_BOOT_API_BASE_URL=http://localhost:8080

# =============================================================================
# OpenTelemetry Configuration
# =============================================================================

# Service information
OTEL_SERVICE_NAME=test-fastapi-app
OTEL_SERVICE_VERSION=2.0.0

# OTLP Exporter (uncomment to enable tracing export)
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
# OTEL_EXPORTER_OTLP_HEADERS=api-key=your-api-key-here

# Server hostname (used for service identification)
# HOSTNAME=localhost

# =============================================================================
# Simulation Configuration
# =============================================================================

# Timeout and blocking settings
# MAX_TIMEOUT_DURATION=300
# DEFAULT_BLOCK_DURATION=30

# =============================================================================
# Application Configuration
# =============================================================================

# Application information
# APP_NAME=Enhanced FastAPI Test Application
# APP_VERSION=2.0.0
# APP_DESCRIPTION=A comprehensive FastAPI app with CRUD, search, bulk operations, tracing, and metrics
# DEBUG=false

# Server settings
# HOST=0.0.0.0
# PORT=8000
# RELOAD=true

# Logging
# LOG_LEVEL=INFO

# OpenAPI documentation URLs
# DOCS_URL=/docs
# REDOC_URL=/redoc
# OPENAPI_URL=/openapi.json